        "analyze_image",
        "compare_images",
        "batch_analyze",
        "get_thumbnail"
      ],
      "requirements": ["Pillow", "requests"],
      "use_cases": [
        "image_analysis",
        "metadata_extraction",
        "image_comparison"
      ]
    },
    "price_data_collector": {
      "name": "price_data_collector",
