{
  "version": "1.0.0",
  "description": "OpenAI-compatible tool registry for CBW Agents",
  "last_updated": "2025-12-08",
  "categories": {
    "web_operations": {
      "description": "Tools for web browsing, scraping, and content extraction",
      "tools": [
        "web_browsing",
        "web_to_markdown",
        "web_crawler",
        "file_downloader"
      ]
    },
    "data_collection": {
      "description": "Tools for collecting and tracking various types of data",
      "tools": [
        "price_data_collector",
        "bookmarks_manager"
      ]
    },
    "analysis": {
      "description": "Tools for analyzing content, images, and data",
      "tools": [
        "image_analyzer",
        "data_processing"
      ]
    },
    "infrastructure": {
      "description": "Tools for system and network monitoring",
      "tools": [
        "network_monitor",
        "system_diagnostics"
      ]
    },
    "file_operations": {
      "description": "Tools for file system operations",
      "tools": [
        "file_operations",
        "file_downloader"
      ]
    }
  },
  "tools": {
    "web_browsing": {
      "name": "web_browsing",
      "version": "1.0.0",
      "description": "Browse URLs and extract content with navigation capabilities",
      "category": "web_operations",
      "complexity": "simple",
      "openai_compatible": true,
      "module_path": "tools.web_browsing",
      "class_name": "WebBrowsingTool",
      "functions": [
        "browse_url",
        "click_link",
        "search_page",
        "get_page_structure",
        "get_history"
      ],
      "requirements": ["requests", "beautifulsoup4", "lxml"],
      "use_cases": [
        "web_navigation",
        "content_extraction",
        "link_discovery",
        "page_analysis"
      ]
    },
    "file_downloader": {
      "name": "file_downloader",
      "version": "1.0.0",
      "description": "Download files with progress tracking and validation",
      "category": "file_operations",
      "complexity": "simple",
      "openai_compatible": true,
      "module_path": "tools.file_downloader",
      "class_name": "FileDownloaderTool",
      "functions": [
        "download_file",
        "download_multiple",
        "get_file_info",
        "list_downloads",
        "delete_download"
      ],
      "requirements": ["requests", "pathlib", "hashlib"],
      "use_cases": [
        "file_downloading",
        "batch_downloads",
        "download_management"
      ]
    },
    "web_to_markdown": {
      "name": "web_to_markdown",
      "version": "1.0.0",
      "description": "Convert web pages to clean Markdown format",
      "category": "web_operations",
      "complexity": "simple",
      "openai_compatible": true,
      "module_path": "tools.web_to_markdown",
      "class_name": "WebToMarkdownTool",
      "functions": [
        "convert_url",
        "convert_html",
        "convert_to_file",
        "batch_convert"
      ],
      "requirements": ["requests", "beautifulsoup4", "html2text"],
      "use_cases": [
        "content_conversion",
        "documentation_generation",
        "article_archiving"
      ]
    },
    "bookmarks_manager": {
      "name": "bookmarks_manager",
      "version": "1.0.0",
      "description": "Manage bookmarks with tagging and search capabilities",
      "category": "data_collection",
      "complexity": "medium",
      "openai_compatible": true,
      "module_path": "tools.bookmarks_manager",
      "class_name": "BookmarksManagerTool",
      "functions": [
        "add_bookmark",
        "search_bookmarks",
        "update_bookmark",
        "delete_bookmark",
        "get_all_tags",
        "export_bookmarks"
      ],
      "requirements": ["sqlite3", "pathlib", "json"],
      "use_cases": [
        "bookmark_organization",
        "research_management",
        "link_curation"
      ]
    },
